<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.3.xsd">

    <changeSet id="add-transfer-type-fields-to-distributions" author="system">
        <comment>Add fromOfficeId, toOfficeId, employeeId, and transferType to item_distributions table</comment>
        
        <!-- Add from_office_id column -->
        <addColumn tableName="item_distributions">
            <column name="from_office_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        
        <!-- Add to_office_id column -->
        <addColumn tableName="item_distributions">
            <column name="to_office_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        
        <!-- Add employee_id column -->
        <addColumn tableName="item_distributions">
            <column name="employee_id" type="BIGINT">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        
        <!-- Add transfer_type column -->
        <addColumn tableName="item_distributions">
            <column name="transfer_type" type="VARCHAR(20)" defaultValue="ALLOCATION">
                <constraints nullable="false"/>
            </column>
        </addColumn>
        
        <!-- Migrate existing data: set to_office_id from office_id -->
        <sql>
            UPDATE item_distributions SET to_office_id = office_id WHERE to_office_id IS NULL;
        </sql>
        
        <!-- Add foreign key constraints -->
        <addForeignKeyConstraint baseTableName="item_distributions" 
                                 baseColumnNames="from_office_id"
                                 referencedTableName="offices" 
                                 referencedColumnNames="id"
                                 constraintName="fk_item_distributions_from_office"
                                 onDelete="SET NULL"/>
        
        <addForeignKeyConstraint baseTableName="item_distributions" 
                                 baseColumnNames="to_office_id"
                                 referencedTableName="offices" 
                                 referencedColumnNames="id"
                                 constraintName="fk_item_distributions_to_office"
                                 onDelete="SET NULL"/>
        
        <addForeignKeyConstraint baseTableName="item_distributions" 
                                 baseColumnNames="employee_id"
                                 referencedTableName="employees" 
                                 referencedColumnNames="id"
                                 constraintName="fk_item_distributions_employee"
                                 onDelete="SET NULL"/>
    </changeSet>

</databaseChangeLog>
